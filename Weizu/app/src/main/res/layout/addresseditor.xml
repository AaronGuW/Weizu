<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="23"
        android:orientation="horizontal"
        android:background="#e8591a">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/headline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:text="@string/editaddress"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="center"/>

        <TextView
            android:id="@+id/finish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="完成"
            android:clickable="true"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:textSize="16sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#e8e8e8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="229"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/label_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_margin="5dp"
                android:maxLength="6"
                android:paddingLeft="10dp"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:background="@drawable/roundcorner_bordbg"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/recipient"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/recipient_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_margin="5dp"
                android:maxLength="6"
                android:paddingLeft="10dp"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:background="@drawable/roundcorner_bordbg"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/phonenumber"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/phonenumber_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_margin="5dp"
                android:maxLength="11"
                android:paddingLeft="10dp"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:background="@drawable/roundcorner_bordbg"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/address"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/address_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_margin="5dp"
                android:maxLength="64"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="top"
                android:imeOptions="actionDone"
                android:background="@drawable/roundcorner_bordbg"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>