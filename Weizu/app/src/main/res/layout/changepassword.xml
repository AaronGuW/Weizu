<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="23"
        android:orientation="horizontal"
        android:background="#e8591a">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/headline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:text="@string/changepassword"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="center"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e8e8e8"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="229"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/input_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundcorner_bordbg">

            <EditText
                android:id="@+id/oldPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/oldpassword"
                android:background="@drawable/nobordbg"
                android:textColorHint="#a8a8a8"
                android:textSize="16sp"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:maxLength="16"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"/>

            <EditText
                android:id="@+id/newPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/newpassword"
                android:background="@drawable/nobordbg"
                android:textColor="#000000"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="16sp"
                android:maxLength="16"
                android:maxLines="1"
                android:textColorHint="#a8a8a8"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"/>

            <EditText
                android:id="@+id/confirmNew"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/confirmnew"
                android:background="@drawable/nobordbg"
                android:textColor="#000000"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="16sp"
                android:maxLength="16"
                android:maxLines="1"
                android:textColorHint="#a8a8a8"/>

        </LinearLayout>

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/themebtn"
            android:text="@string/submitchanges"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/input_panel"/>

    </RelativeLayout>

</LinearLayout>