<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/root">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="32.5"
        android:background="#e8591a">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/back"/>

        <ImageView
            android:id="@+id/headline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:src="@drawable/order_detail"
            android:padding="8dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#e8e8e8"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="32"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/side"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/leaser"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/leaser"
            android:textColor="#000000"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/side"/>

        <TextView
            android:id="@+id/viewAddress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="收货地址"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:gravity="center"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="72"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/goods_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/goods_pic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/goodspic"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:text="@string/goodsname"/>

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/brief"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="@string/rentfee"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:paddingRight="10dp"
                android:gravity="right|center_vertical"
                android:textColor="#e8591a"
                android:text="@string/rentfee"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="@string/deposit"/>

            <TextView
                android:id="@+id/deposit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:gravity="right|center_vertical"
                android:textColor="#e8591a"
                android:textSize="14sp"
                android:text="@string/deposit"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/amount"
                android:textColor="#000000"
                android:gravity="center"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#e8591a"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="@string/amount"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/rentTime"
                android:textColor="#000000"
                android:gravity="center"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/renttime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#e8591a"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="@string/rentTime"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/howtoreceive"
                android:gravity="center"
                android:textColor="#000000"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/way_rcv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#e8591a"
                android:text="@string/howtoreceive"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#000000"
                android:text="@string/howtoreturn"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/way_rtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#e8591a"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="@string/howtoreturn"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#e8e8e8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="170"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/process"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/stage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/stage1_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#e8591a"
                    android:text="@string/stage1"
                    android:gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stage2_desc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#e8e8e8"
                        android:text="@string/stage2"
                        android:layout_weight="2"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/stage2_check_exp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="3"
                        android:text="@string/check_exp"
                        android:textColor="#e8591a"
                        android:visibility="invisible"
                        android:clickable="true"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/stage3_desc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textColor="#e8e8e8"
                        android:text="@string/stage3"
                        android:gravity="center_vertical"/>
                    
                    <ImageView
                        android:id="@+id/stage3_signfor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/signfor"
                        android:visibility="invisible"
                        android:clickable="true"
                        android:padding="6dp"/>
                    
                </LinearLayout>
                

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stage4_desc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#e8e8e8"
                        android:text="@string/stage4"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/stage4_check_exp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#e8591a"
                        android:text="@string/check_exp"
                        android:clickable="true"
                        android:visibility="invisible"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/stage4_sendout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/sendout"
                        android:visibility="invisible"
                        android:padding="6dp"
                        android:clickable="true"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/stage5_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#e8e8e8"
                    android:text="@string/stage5"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/stage6_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#e8e8e8"
                    android:text="@string/stage6"
                    android:gravity="center_vertical"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="38"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/send_msg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/sendmsg"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/refund_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e8591a"
            android:text="@string/refund"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="18sp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/close_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/close"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:background="#888888"
            android:clickable="true"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>