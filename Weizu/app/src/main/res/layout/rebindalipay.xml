<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/account_header"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="12sp"
            android:text="当前账号："/>

        <TextView
            android:id="@+id/current_account"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/account"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/account_header"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/unbind"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="@string/unbind"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/rebind"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/unbind"
            android:text="@string/rebind"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rebind_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="32"
            android:hint="@string/inputAlipay"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/confirmAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="32"
            android:hint="@string/confirmAlipay"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e8e8e8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rebind_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/rc_cancel"
                android:gravity="center"
                android:clickable="true"
                android:textColor="#000000"
                android:background="@drawable/nobordbg"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e8e8e8"/>

            <TextView
                android:id="@+id/rebind_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/rc_confirm"
                android:clickable="true"
                android:gravity="center"
                android:textColor="#000000"
                android:background="@drawable/nobordbg"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/unbind_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_unbind"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e8e8e8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/unbind_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/rc_cancel"
                android:gravity="center"
                android:clickable="true"
                android:textColor="#000000"
                android:background="@drawable/nobordbg"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e8e8e8"/>

            <TextView
                android:id="@+id/unbind_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/rc_confirm"
                android:clickable="true"
                android:gravity="center"
                android:textColor="#000000"
                android:background="@drawable/nobordbg"/>

        </LinearLayout>

    </LinearLayout>





</LinearLayout>